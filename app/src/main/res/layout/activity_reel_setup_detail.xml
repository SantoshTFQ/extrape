<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- 📸 Thumbnail Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="5dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#FFFFFF">

            <ImageView
                android:id="@+id/imgReelThumb"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:contentDescription="Reel Thumbnail"
                android:background="#E0E0E0" />
        </androidx.cardview.widget.CardView>

        <!-- 🎯 Caption -->
        <TextView
            android:id="@+id/txtCaption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#1A1A1A"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Reel Caption Here"
            android:paddingStart="4dp"
            android:paddingBottom="12dp" />

        <!-- 💰 Affiliate Link Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Affiliate Link"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:textSize="14sp"
                    android:paddingBottom="6dp" />

                <EditText
                    android:id="@+id/edtProductUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter product URL"
                    android:inputType="textUri"
                    android:background="@drawable/bg_input_outline"
                    android:padding="12dp"
                    android:textColor="#000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <Button
                        android:id="@+id/btnGenerateLink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Generate Link"
                        android:backgroundTint="@color/purple_700"
                        android:textColor="#FFF"
                        android:textAllCaps="false"
                        android:layout_marginEnd="6dp" />

                    <Button
                        android:id="@+id/btnChangeLink"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Change Link"
                        android:backgroundTint="@color/purple_500"
                        android:textColor="#FFF"
                        android:textAllCaps="false"
                        android:layout_marginStart="6dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/txtGeneratedLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#2E7D32"
                    android:textSize="13sp"
                    android:paddingTop="8dp"
                    android:textStyle="italic"
                    android:visibility="gone" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ⚙️ Automation Setup -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="12dp"
            card_view:cardElevation="3dp"
            android:backgroundTint="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <Switch
                    android:id="@+id/switchAutomation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Automation"
                    android:textSize="14sp"
                    android:textColor="#111"
                    android:checked="true"
                    android:paddingBottom="10dp" />

                <EditText
                    android:id="@+id/edtCommentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter auto comment text"
                    android:background="@drawable/bg_input_outline"
                    android:padding="12dp"
                    android:layout_marginTop="6dp" />

                <EditText
                    android:id="@+id/edtDmText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter auto DM text"
                    android:background="@drawable/bg_input_outline"
                    android:padding="12dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 💾 Save Button -->
        <Button
            android:id="@+id/btnSaveSetup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💾 Save Settings"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/teal_700"
            android:textColor="#FFF"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:elevation="4dp" />

    </LinearLayout>
</ScrollView>
