<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurfaceVariant">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š SaaS Dashboard"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface" />

        <!-- Cards Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:columnCount="2">

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout style="@style/DashboardCard.Content">
                    <TextView style="@style/DashboardCard.Title" android:text="MRR" />
                    <TextView style="@style/DashboardCard.Value" android:text="$8,430" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:layout_marginStart="8dp">

                <LinearLayout style="@style/DashboardCard.Content">
                    <TextView style="@style/DashboardCard.Title" android:text="New Users" />
                    <TextView style="@style/DashboardCard.Value" android:text="125" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp">

                <LinearLayout style="@style/DashboardCard.Content">
                    <TextView style="@style/DashboardCard.Title" android:text="Active Users" />
                    <TextView style="@style/DashboardCard.Value" android:text="1.2k" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/DashboardCard"
                app:cardBackgroundColor="?attr/colorSurface"
                app:cardElevation="4dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp">

                <LinearLayout style="@style/DashboardCard.Content">
                    <TextView style="@style/DashboardCard.Title" android:text="Churn Rate" />
                    <TextView style="@style/DashboardCard.Value" android:text="2.1%" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </GridLayout>

        <!-- Recent Activity List -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recent Activity"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:paddingBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp" />

    </LinearLayout>

</ScrollView>
